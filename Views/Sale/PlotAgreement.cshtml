									<label>Booking Id</label>
									<input type="text" class="form-control" />
								</div>
								<div class="col-sm-6">
									<label>Customer Id</label>
									<input class="form-control" />
								</div>
								<div class="col-sm-6">
									<label>Customer Name</label>
									<input class="form-control" />
								</div>
								<div class="col-sm-6">
									<label>Date</label>
									<input class="form-control" />
								</div>
							</div>
						</form>
					</div>
				</div>
				<div class="col-lg-1 d-none d-lg-block"></div>
			</div>
		</div>
	</div>
</div>



