
@{
	ViewBag.Title = "PlotAvailability";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="hero page-inner overlay" style="background-image: url('/HomeAssets/images/hero_bg_3.jpg')">
	<div class="container">
		<div class="row justify-content-center align-items-center">
			<div class="col-lg-9 text-center mt-5">
				<h1 class="heading aos-init aos-animate" data-aos="fade-up">Plot Availability</h1>

				<nav aria-label="breadcrumb" data-aos="fade-up" data-aos-delay="200" class="aos-init aos-animate">
					<ol class="breadcrumb text-center justify-content-center">
						<li class="breadcrumb-item"><a href="../">Home</a></li>
						<li class="breadcrumb-item active text-white-50" aria-current="page">
							Plot Availability
						</li>
					</ol>
				</nav>
			</div>
		</div>
	</div>
</div>


<div class="container mt-lg-5">
	<div class="card border-0 shadow-lg mb-4">
		<div class="card-header bg-primary pl-3 pb-0">
			<h5 class="h5 text-white font-weight-bold mb-4">Search Plots</h5>
		</div>
		<div class="card-body p-0">
			<div class="row">
				<div class="col-lg-12">
					<div class="p-3">
						<form>
							<div class="form-group row">
								<div class="col-sm-4">
									<label>Site Name*</label>
									<select class="form-control">
										<option value="All">All</option>
										<option value="Real Estate">Real Estate</option>
									</select>
								</div>
								<div class="col-sm-4">
									<label>Block*</label>
									<select class="form-control">
										<option value="All">All</option>
										<option value="Block A">Block A</option>
										<option value="Block B">Block B</option>
										<option value="Block C">Block C</option>
										<option value="Block D">Block D</option>
									</select>
								</div>
								<div class="col-sm-4">
									<label>Plot No</label>
									<input class="form-control" />
								</div>
							</div>
							<div class="form-group row mt-3">
								<div class="col-sm-12">
									<input type="submit" value="Get Data" class="btn btn-primary btn-sm" id="btn_addAgent" />
									<input type="reset" value="Reset" class="btn btn-primary btn-sm" id="btn_addAgent" />
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="row mt-5 mb-5">
		<div class="col-xs-2 col-sm-2 col-md-2 col-lg-2"><a href="javascript:void(0)" class="text-info">All Plot</a></div>
		<div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
			<div class="square bg-success"></div><span class="text-info">Plot Available</span>
		</div>
		<div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
			<div class="square bg-danger"></div><span class="text-info">Plot Booked</span>
		</div>
		<div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
			<div class="square bg-warning"></div><span class="text-info">Plot Hold</span>
		</div>
		<div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
			<div class="square bg-secondary"></div><span class="text-info">Plot Alloted</span>
		</div>
		<div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
			<div class="square bg-primary"></div><span class="text-info">Registry Plot</span>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
			<div class="property-item mb-30">
				<div class="row">
					<div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
						<div class="badge bg-success" style="font-size: 18px">SECTOR-A 10</div>
					</div>
					<div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
						<div class="badge bg-primary" style="font-size: 18px">SECTOR-A 11</div>
					</div>
					<div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
						<div class="badge bg-success" style="font-size: 18px">SECTOR-A 12</div>
					</div>
					<div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
						<div class="badge bg-success" style="font-size: 18px">SECTOR-A 13</div>
					</div>
					<div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
						<div class="badge bg-warning" style="font-size: 18px">SECTOR-A 14</div>
					</div>
					<div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
						<div class="badge bg-success" style="font-size: 18px">SECTOR-A 15</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>


