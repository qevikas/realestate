
@{
	ViewBag.Title = "ChequeClearance";
	Layout = "~/Views/Shared/AdminLayoutPage.cshtml";
}

@using System.Data;


<div class="container">
	<div class="card border-0 shadow-lg mb-4">
		<div class="card-header bg-primary pl-3 pb-0">
			<h5 class="h5 text-white font-weight-bold mb-4">Cheque Clearance</h5>
		</div>
		<div class="card-body p-0">
			<div class="row">
				<div class="col-lg-1 d-none d-lg-block"></div>
				<div class="col-lg-10">
					<div class="p-3">
						<form>
							<div class="form-group row">
								<div class="col-sm-6">
									<label>Project Name</label>
									<select class="form-control">
										<option value="Select">Select</option>
										<option value="Site">Site1</option>

									</select>
								</div>
								<div class="col-sm-6">
									<label>Block NO</label>
									<select class="form-control">
										<option value="Select">Select an option</option>
										<option value="SectoerA">Sector A</option>
										<option value="SectoerB">Sector B</option>
									</select>
								</div>
								<div class="col-sm-6">
									<label>Plot NO</label>
									<select class="form-control">
										<option value="Select">Select an option</option>
										<option value="A">A</option>
										<option value="B">B</option>
										<option value="C">C</option>
									</select>
								</div>
								<div class="col-sm-6">
									<label>Booking ID</label>
									<input type="text" class="form-control" readonly />
								</div>
								<div class="col-sm-6">
									<label>Cheque/DD/NEFT/ No.</label>
									<select class="form-control">
										<option value="Select">Select an option</option>
										<option value="Site1">Site1</option>
										<option value="Site1">Site1</option>
									</select>
								</div>
								<div class="col-sm-6">
									<label>Amount</label>
									<input type="text" class="form-control" readonly />
								</div>
								<div class="col-sm-6">
									<label>A/C Number</label>
									<input type="text" class="form-control" />
								</div>
								<div class="col-sm-6">
									<label>Book Name</label>
									<input type="text" class="form-control" />
								</div>
								<div class="col-sm-6">
									<label>Branch Name</label>
									<input type="text" class="form-control" />
								</div>
								<div class="col-sm-6">
									<label>Cheque Status.</label>
									<select class="form-control">
										<option value="Select">Select an option</option>
										<option value="CLEAR">CLEAR</option>
										<option value="BOUNCED">BOUNCED</option>
										<option value="CANCEL">CANCEL</option>
										<option value="Pending">Pending</option>
									</select>
								</div>
								<div class="col-sm-6">
									<label>Clear date</label>
									<input type="date" class="form-control" />
								</div>
								<div class="col-sm-6">
									<label>Remarks</label>
									<textarea type="text" class="form-control"> </textarea>
								</div>
							</div>
							<div class="form-group row">
								<div class="col-sm-12">
									<input type="submit" value="Cheque Clearance" class="btn btn-primary btn-block" id="btn_addAgent" />
								</div>
							</div>
						</form>
					</div>
				</div>
				<div class="col-lg-1 d-none d-lg-block"></div>
			</div>
		</div>
	</div>
</div>

