
@{
    ViewBag.Title = "AddBlock";
    Layout = "~/Views/Shared/AdminLayoutPage.cshtml";
}

<div class="container">
	<div class="card border-0 shadow-lg mb-4">
		<div class="card-header bg-primary pl-3 pb-0">
			<h5 class="h5 text-white font-weight-bold mb-4">ADD BLOCK</h5>
		</div>
		<div class="card-body p-0">
			<div class="row">
				<div class="col-lg-1 d-none d-lg-block"></div>
				<div class="col-lg-10">
					<div class="p-3">
						<form>

							<div class="form-group row">
								<div class="col-sm-4">
									<label>Project Name</label>
									<select class="form-control">
										<option>Select</option>
										<option value="Lucknow">Lucknow</option>
									</select>
								</div>
								<div class="col-sm-4">
									<label>Block</label>
									<input class="form-control" />
								</div>
								<div class="col-sm-4 pb-5">
									<input type="submit" value="ADD" class="btn btn-primary btn-block mt-4" />
								</div>
							</div>
						</form>
					</div>
				</div>
				<div class="col-lg-1 d-none d-lg-block"></div>
			</div>
		</div>
	</div>
</div>



<div class="card shadow mb-4">
	<div class="card-header py-3">
		<h5 class="m-0 font-weight-bold text-primary">Block Details</h5>
	</div>
	<div class="card-body">
		<div class="table-responsive">
			<div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
				<div class="row">
					<div class="col-sm-12">
						<table class="table table-bordered dataTable" width="100%" cellspacing="0" role="grid" aria-describedby="dataTable_info" style="width: 100%;">
							<thead>
								<tr role="row">
									<th>Sr. No.</th>
									<th>Project Name</th>
									<th>Block</th>
									<th>Action</th>
								</tr>
							</thead>
							<tbody>
								<tr>
									<td>1</td>
									<td>Lucknow</td>
									<td>Sector-A</td>
									<td>
										<a href="javascript:void(0)" class="btn btn-sm text-primary" onclick="_update('')"><i class="fa fa-edit"></i></a>
										<a href="javascript:void(0)" class="btn btn-sm text-danger" onclick="_delete('')"><i class="fa fa-trash"></i></a>
									</td>
								</tr>

							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
